// Place your settings in this file to overwrite default and user settings.
{
   // Use XO for linting
   "xo.enable": true,

   // Stick to 80 chars if possible
   "editor.rulers":[80, 120],

	// following should be picked from EditorConfig extension but it doesn't work yet
	"files.trimTrailingWhitespace": true,
	"files.eol": "\n",

  // alow ES7 rest and spread operators by disabling all @code checking
  "javascript.validate.enable": false
}
