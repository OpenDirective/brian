{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "outDir": "build",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "importHelpers": true
    },
    "include": ["src/*/index.ts"],
    "exclude": ["src/node_modules"]
}
