{
  "private": true,
  "name": "brian",
  "version": "0.1.0",
  "description": "Easy access to media and communications",
  "homepage": "https://github.com/OpenDirective/brian",
  "bugs": {
    "url": "https://github.com/OpenDirective/brian/issues"
  },
  "author": "Steve Lee (http://opendirective.com)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/OpenDirective/brian"
  },
  "keywords": [
    "Access",
    "Assistive Technology",
    "Cognitive"
  ],
  "scripts": {
    "clean": "rimraf client/dist/*",

    "prebuild": "npm run clean ",
    "build": "bash -c \"NODE_ENV=production webpack --config client/webpack.config.js\"",

    "lint": "xo ./client/src/js/**/*.js",
    "test": "zuul --local 8080 test/test.js",

    "open:prod": "opener chrome https://brian.opendirective.net/",
    "open:dev": "opener chrome http://localhost:8080/",

    "_buildanddeploy": "npm run build && npm run _deploy",
    "_deploy": "bash -c \"GIT_DEPLOY_DIR=client/dist GIT_DEPLOY_REPO=git@github.com:OpenDirective/brianLive.git GIT_DEPLOY_BRANCH=gh-pages bash ./scripts/deploy.sh\"",
    "predeploy": "npm run lint",
    "deploy": "bash -c \"read -n1 -p\\\"Have you commited ready to deploy (yY) \\\"; echo; [[ $REPLY = [yY] ]] && npm run _buildanddeploy || { echo \\\"You didn't answer yes, or deploy failed.\\\"; }",

    "serve": "bash -c \"DEV_USEHOT=true webpack-dev-server --config client/webpack.config.js --colors --progress\"",
    "start": "npm install && npm run serve",

    "dev": "npm run open:dev -s & npm run serve -s",

    "env": "env",
    "lsCRLF": "bash -c \"grep -UIrl --exclude-dir={.git,.vs,node_modules} $'\\x0D' ./\"",
    "lsBinary": "bash -c \"grep -ILr --exclude-dir={.git,.vs,node_modules} . ./\"",
    "lsTextTypes": "bash -c \"grep -rIl --exclude-dir={.git,.vs,node_modules} . ./ | sed -e 's/.*\\.//' | sort | uniq\""
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "dependencies": {
    "@cycle/core": "^6.0.3",
    "@cycle/dom": "^9.2.2",
    "@cycle/http": "^8.2.2",
    "@cycle/isolate": "^1.2.0",
    "cycle-history": "^0.5.0",
    "cycle-restart": "0.0.14",
    "hapi": "13.2.2",
    "inert": "3.2.0",
    "lodash": "^4.6.1",
    "rx": "^4.1.0",
    "rx-combine-latest-obj": "^1.0.2",
    "switch-path": "^1.1.5"
  },
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "copy-webpack-plugin": "^1.1.1",
    "css-loader": "^0.23.1",
    "eslint": "^2.5.3",
    "eslint-plugin-immutable": "^1.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.14.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "opener": "^1.4.1",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.5.2",
    "standard": "^6.0.8",
    "style-loader": "^0.13.1",
    "tape": "^4.5.1",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.8.4",
    "xo": "^0.13.0",
    "zuul": "^3.10.1"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "space": 2,
    "envs": [
      "browser",
      "node"
    ],
    "plugins": [
      "immutable"
    ],
    "rules": {
      "babel/new-cap": 0,
      "comma-dangle": [
        2,
        "only-multiline"
      ],
      "immutable/no-let": 2,
      "immutable/no-this": 2,
      "immutable/no-mutation": 2,
      "no-var": 2,
      "no-undef": 2,
      "no-param-reassign": 2
    }
  }
}
