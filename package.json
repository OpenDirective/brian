{
  "private": true,
  "name": "brian",
  "version": "0.1.0",
  "description": "Easy access to media and communications",
  "homepage": "https://github.com/OpenDirective/brian",
  "bugs": {
    "url": "https://github.com/OpenDirective/brian/issues"
  },
  "author": "Steve Lee (http://opendirective.com)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/OpenDirective/brian"
  },
  "keywords": [
    "Access",
    "Assistive Technology",
    "Cognitive"
  ],
  "scripts": {
    "clean": "rimraf dist/*",

    "prebuild": "npm run clean -s",
    "build": "bash -c \"NODE_ENV=production webpack --config webpack.config.js\"",

    "lint": "xo ./src/js/**/*.js",
    "test": "zuul --local 8080 test/test.js",

    "open:prod": "opener chrome https://brian.opendirective.net/",
    "open:dev": "opener chrome --remote-debugging-port=9222 http://localhost:8080/",

    "_buildanddeploy": "npm run build && npm run _deploy",
    "_deploy": "bash -c \"GIT_DEPLOY_DIR=dist GIT_DEPLOY_REPO=git@github.com:OpenDirective/brianLive.git GIT_DEPLOY_BRANCH=gh-pages bash ./scripts/deploy.sh\"",
    "deploy": "bash -c \"read -n1 -p\\\"Have you commited ready to deploy (yY) \\\"; echo; [[ $REPLY = [yY] ]] && npm run _buildanddeploy -s || { echo \\\"You didn't answer yes, or deploy failed.\\\"; }",

    "preinstall": "nvm use 4.4.3 || echo nvm not found: check node version && pause",
    "postinstall": "npm prune",

    "serve": "bash -c \"DEV_USEHOT=true webpack-dev-server --config webpack.config.js --progress\"",
    "start": "npm install && npm run dev -s",

    "dev": "npm run open:dev -s & npm run serve -s",

    "env": "env",
    "lsCRLF": "bash -c \"grep -UIrl --exclude-dir={.git,.vs,node_modules} $'\\x0D' ./\"",
    "lsBinary": "bash -c \"grep -ILr --exclude-dir={.git,.vs,node_modules} . ./\"",
    "lsTextTypes": "bash -c \"grep -rIl --exclude-dir={.git,.vs,node_modules} . ./ | sed -e 's/.*\\.//' | sort | uniq\""
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "dependencies": {
    "@cycle/core": "6.0.3",
    "@cycle/dom": "9.4.0",
    "@cycle/history": "2.0.2",
    "@cycle/http": "8.2.2",
    "@cycle/isolate": "1.2.0",
    "cycle-restart": "0.0.14",
    "history": "2.0.2",
    "lodash": "4.11.1",
    "moment": "^2.13.0",
    "rx": "4.1.0",
    "switch-path": "1.1.6"
  },
  "devDependencies": {
    "babel-core": "6.7.6",
    "babel-loader": "6.2.4",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-preset-es2015": "6.6.0",
    "copy-webpack-plugin": "2.1.1",
    "css-loader": "0.23.1",
    "eslint-plugin-immutable": "1.0.0",
    "extract-text-webpack-plugin": "1.0.1",
    "html-webpack-plugin": "2.16.0",
    "opener": "1.4.1",
    "parallelshell": "2.0.0",
    "rimraf": "2.5.2",
    "style-loader": "0.13.1",
    "tape": "4.5.1",
    "webpack": "1.13.0",
    "webpack-dev-server": "1.14.1",
    "webpack-merge": "0.11.0",
    "xo": "0.14.0"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "space": 2,
    "envs": [
      "browser"
    ],
    "plugins": [
      "immutable"
    ],
    "rules": {
      "babel/new-cap": 0,
      "comma-dangle": [
        2,
        "only-multiline"
      ],
      "immutable/no-let": 2,
      "immutable/no-this": 2,
      "immutable/no-mutation": 2,
      "no-var": 2,
      "no-undef": 2,
      "no-param-reassign": 2
    }
  }
}
