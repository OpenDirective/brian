{
  "private": true,
  "name": "brian",
  "version": "0.1.0",
  "description": "Easy access to media and communications",
  "homepage": "https://github.com/OpenDirective/brian",
  "bugs": {
    "url": "https://github.com/OpenDirective/brian/issues"
  },
  "author": "Steve Lee (http://opendirective.com)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/OpenDirective/brian"
  },
  "keywords": [
    "Access",
    "Assistive Technology",
    "Cognitive"
  ],
  "scripts": {
    "serve": "webpack-dev-server --config client/webpack.config.js --progress --colors --inline --port 8080",
    "start": "npm install && npm run serve",
    "build": "rimraf client/src/dist/* && cross-env NODE_ENV=production webpack --config client/webpack.config.js",
    "test": "zuul --local 8080 test/test.js",
    "lint": "eslint src/client test src/server test",
    "clean": "rimraf client/dist && mkdirp client/dist",
    "lsCRLF": "bash -c \"grep -UIrl --exclude-dir={.git,.vs,node_modules} $'\\x0D' ./\"",
    "lsBinary": "bash -c \"grep -ILr --exclude-dir={.git,.vs,node_modules} . ./\"",
    "lsTextTypes": "bash -c \"grep -rIl --exclude-dir={.git,.vs,node_modules} . ./ | sed -e 's/.*\\.//' | sort | uniq\""
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "dependencies": {
    "@cycle/core": "^6.0.3",
    "@cycle/dom": "^9.1.0",
    "@cycle/isolate": "^1.2.0",
    "cycle-restart": "0.0.14",
    "cycle-history": "^0.5.0",
    "rx": "^4.1.0",
    "rx-combine-latest-obj": "^1.0.2",
    "switch-path": "^1.1.3",
    "hapi": "13.0.0",
    "inert": "3.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.7.2",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "cross-env": "^1.0.7",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.1.0",
    "eslint-config-hapi": "^9.1.0",
    "eslint-plugin-hapi": "^4.0.0",
    "eslint-plugin-no-class": "^0.1.0",
    "ncp": "^2.0.0",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.5.2",
    "tape": "^4.5.1",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1",
    "copy-webpack-plugin": "^1.1.1",
    "zuul": "^3.10.1"
  }
}
