{
  "private": true,
  "name": "brian",
  "version": "0.1.0",
  "description": "Easy access to media and communications",
  "homepage": "https://github.com/OpenDirective/brian",
  "bugs": {
    "url": "https://github.com/OpenDirective/brian/issues"
  },
  "author": "Steve Lee (http://opendirective.com)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/OpenDirective/brian"
  },
  "keywords": [
    "Access",
    "Assistive Technology",
    "Cognitive"
  ],
  "scripts": {
    "start": "npm run devserver",
    "build": "npm run clean && parallelshell \"npm run build:js\" \"npm run build:css\" \"npm run build:html\"",
    "test": "zuul --local 8080 test/test.js",
    "lint": "eslint src/client test src/server test",
    "devserver": "budo client/src/app.js:bundle.js --dir client/src --live --port 3000",
    "clean": "rimraf client/dist && mkdirp client/dist",
    "bundle": "browserify client/src/app.js --debug | exorcist client/dist/bundle.js.map > client/dist/bundle.js",
    "minify": "uglifyjs client/dist/bundle.js --in-source-map client/dist/bundle.js.map --source-map client/dist/bundle.min.js.map --output client/dist/bundle.min.js --prefix relative --compress --mangle",
    "build:js": "npm run bundle && npm run minify",
    "build:css": "cp -r client/src/css/ client/dist/",
    "build:html": "cp client/src/*.html client/dist",
    "lsCRLF": "bash -c \"grep -UIrl --exclude-dir={.git,.vs,node_modules} $'\\x0D' ./\"",
    "lsBinary": "bash -c \"grep -ILr --exclude-dir={.git,.vs,node_modules} . ./\"",
    "lsTextTypes": "bash -c \"grep -rIl --exclude-dir={.git,.vs,node_modules} . ./ | sed -e 's/.*\\.//' | sort | uniq\""
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "dependencies": {
    "@cycle/core": "^6.0.3",
    "@cycle/dom": "^9.1.0",
    "@cycle/isolate": "^1.2.0",
    "cycle-history": "^0.5.0",
    "rx": "^4.1.0",
    "rx-combine-latest-obj": "^1.0.2",
    "switch-path": "^1.1.3",
    "hapi": "13.0.0",
    "inert": "3.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "^5.0.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "budo": "^8.1.0",
    "eslint-config-hapi": "^9.1.0",
    "eslint-plugin-hapi": "^4.0.0",
    "eslint-plugin-no-class": "^0.1.0",
    "estraverse-fb": "^1.3.1",
    "exorcist": "^0.4.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^1.5.2",
    "parallelshell": "^2.0.0",
    "require-globify": "^1.3.0",
    "rimraf": "^2.5.2",
    "rollupify": "^0.1.0",
    "tape": "^4.5.1",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0",
    "zuul": "^3.10.1"
  },
  "browserify": {
    "transform": [
      "rollupify",
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-0"
          ],
          "sourceMap": true,
          "sourceMapRelative": "."
        }
      ],
      "require-globify"
    ]
  }
}
